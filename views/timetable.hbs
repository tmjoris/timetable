<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Timetable</title>
    <link rel="icon" href="images/favicon.ico">
    <link rel="stylesheet" href="css/timetable-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <i class="fas fa-calendar-alt"></i>
                    <span>EduSchedule</span>
                </div>
                <nav class="navbar">
                    <ul class="nav-menu">
                        <li class="nav-menu">
                            <a href="/" class="nav-link">Home</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
            <h1>School Weekly Timetable</h1>
            <p>Click on any cell to edit</p>

        <div class="controls">
            <button class="btn btn-primary" onclick="generateTimetable()">
                Generate New Timetable
            </button>
            <button class="btn btn-success" onclick="saveTimetable()">
                Save Changes
            </button>
            <button class="btn btn-secondary" onclick="window.location.href='/'">
                Back to Home
            </button>
        </div>

        <div id="alert-container"></div>
        
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>Generating timetable...</p>
        </div>

        {{#if hasData}}
        <div class="timetable-wrapper">
            <table id="timetable">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Monday</th>
                        <th>Tuesday</th>
                        <th>Wednesday</th>
                        <th>Thursday</th>
                        <th>Friday</th>
                    </tr>
                </thead>
                <tbody id="timetable-body">
                    <!-- Time slots will be generated here -->
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="no-timetable">
            <h2>No Timetable Found</h2>
            <p>Click the button above to generate your first timetable!</p>
        </div>
        {{/if}}
    </div>

    <script>
        const subjects = {{{json subjects}}};
        let currentTimetable = {{{json timetable}}};
        const timeSlots = [
            "8:00 - 9:00",
            "9:00 - 10:00",
            "10:00 - 11:00",
            "11:00 - 12:00",
            "12:00 - 1:00",
            "1:00 - 2:00"
        ];
        const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"];

        function showAlert(message, type = 'info') {
            const container = document.getElementById('alert-container');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            alert.style.display = 'block';
            container.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }

        function getTeacherForSubject(subjectName) {
            const subject = subjects.find(s => s.name === subjectName);
            return subject ? subject.teacher : '';
        }

        function getSubjectCategory(subjectName) {
            const subject = subjects.find(s => s.name === subjectName);
            return subject ? subject.category : '';
        }

        function renderTimetable() {
            const tbody = document.getElementById('timetable-body');
            if (!tbody) return;
            
            tbody.innerHTML = '';

            for (let slot = 0; slot < 6; slot++) {
                const row = document.createElement('tr');
                
                // Time column
                const timeCell = document.createElement('td');
                timeCell.className = 'time-slot';
                timeCell.textContent = timeSlots[slot];
                row.appendChild(timeCell);

                // Day columns
                days.forEach(day => {
                    const cell = document.createElement('td');
                    cell.className = 'subject-cell';
                    cell.dataset.day = day;
                    cell.dataset.slot = slot;

                    const subject = currentTimetable[day] ? currentTimetable[day][slot] : '';
                    
                    if (subject) {
                        const category = getSubjectCategory(subject);
                        cell.classList.add(category);
                        cell.innerHTML = `
                            <div class="subject-name">${subject}</div>
                            <div class="teacher-name">${getTeacherForSubject(subject)}</div>
                        `;
                    } else {
                        cell.innerHTML = '<div class="empty-slot">Free</div>';
                    }

                    cell.onclick = () => editCell(cell, day, slot);
                    row.appendChild(cell);
                });

                tbody.appendChild(row);
            }
        }

        function editCell(cell, day, slot) {
            if (cell.querySelector('select')) return; // Already editing

            const currentSubject = currentTimetable[day] ? currentTimetable[day][slot] : '';
            
            const select = document.createElement('select');
            select.innerHTML = '<option value="">-- Free --</option>';
            
            subjects.forEach(sub => {
                const option = document.createElement('option');
                option.value = sub.name;
                option.textContent = `${sub.name} (${sub.teacher})`;
                if (sub.name === currentSubject) {
                    option.selected = true;
                }
                select.appendChild(option);
            });

            cell.innerHTML = '';
            cell.appendChild(select);
            cell.classList.add('editing');
            select.focus();

            select.onchange = () => {
                if (!currentTimetable[day]) {
                    currentTimetable[day] = ["", "", "", "", "", ""];
                }
                currentTimetable[day][slot] = select.value;
                cell.classList.remove('editing');
                renderTimetable();
            };

            select.onblur = () => {
                cell.classList.remove('editing');
                renderTimetable();
            };
        }

        async function generateTimetable() {
            document.getElementById('loading').style.display = 'block';
            
            try {
                const response = await fetch('/generate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    currentTimetable = data.timetable;
                    renderTimetable();
                    showAlert('Timetable generated successfully!', 'success');
                } else {
                    showAlert('Error: ' + data.error, 'error');
                }
            } catch (error) {
                showAlert('Failed to generate timetable', 'error');
            } finally {
                document.getElementById('loading').style.display = 'none';
            }
        }

        async function saveTimetable() {
            try {
                // Validate first
                const validationResponse = await fetch('/validate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ timetable: currentTimetable })
                });
                
                const validation = await validationResponse.json();
                
                if (!validation.valid) {
                    showAlert('Validation errors: ' + validation.errors.join(', '), 'error');
                    return;
                }

                // Save if valid
                const response = await fetch('/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ timetable: currentTimetable })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('Timetable saved successfully!', 'success');
                } else {
                    showAlert('Error saving timetable', 'error');
                }
            } catch (error) {
                showAlert('Failed to save timetable', 'error');
            }
        }

        if (Object.keys(currentTimetable).length > 0) {
            renderTimetable();
        }
    </script>
